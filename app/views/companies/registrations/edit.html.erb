<div class="company-login-bg--container bg-container col-xs-12 col-sm-12 col-md-12 col-lg-12" id="company-edit-bg--container">
    <!-- <div class="new-post--container col-xs-12 col-sm-12 col-md-12 col-lg-12"> -->
        <!-- <div class="company-edit--container col-xs-12 col-sm-12 col-md-12 col-lg-12" -->            
            <h1>Companies Edit <%= resource_name.to_s.humanize %></h1>

        <div class="company-edit--nav col-xs-12 col-sm-12 col-md-4 col-lg-4">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input company-edit--options company-edit--options-active" id="1">Profile</div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input company-edit--options" id="2">Password</div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input company-edit--options" id="3">Metrics</div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input company-edit--options" id="4">Delete Account</div>
        </div>

        <div class="company-edit--content col-xs-12 col-sm-12 col-md-8 col-lg-8">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, method: :put }) do |f| %>
                <%= devise_error_messages! %>

                <div class="company-edit--section company-edit--profile" id="company-edit-1">
                    <div class="field">
                        <%= f.text_field :name, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", autofocus: true, placeholder: "Company Name" %>
                    </div>

                    <div class="field">
                        <%= f.text_area :description, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", placeholder: "Company Description" %>
                    </div>

                    <div class="field">
                        <%= f.url_field :website, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", placeholder: "Website" %>
                    </div>

                    <div class="field">
                        <%= f.text_field :facebook, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", placeholder: "Facebook" %>
                    </div>

                    <div class="field">
                        <%= f.text_field :instagram, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", placeholder: "Instagram" %>
                    </div>

                    <div class="field">
                        <%= f.text_field :twitter, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", placeholder: "Twitter" %>
                    </div>
                    <div class="actions">
                        <%= f.submit "Update", class: "home-search-form--search new-post--submit" %>
                    </div>

                </div>


                <div class="company-edit--section company-edit--password company-edit--hidden" id="company-edit-2">
                    <div class="field">
                        <%= f.email_field :email, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", autofocus: true, placeholder: "Work Email" %>
                    </div>

                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                    <% end %>

                    <div class="field">
                        <%= f.password_field :password, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", autocomplete: "off", placeholder: "New Password (leave blank if you don't want to change it)" %>
                    </div>

                    <div class="field">
                        <%= f.password_field :password_confirmation, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", autocomplete: "off", placeholder: "Password Confirmation" %>
                    </div>

                    <div class="field">
                        <%= f.password_field :current_password,class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", autocomplete: "off", placeholder: "Current Password (we need your current password to confirm your changes)" %>
                    </div>
                    <div class="actions">
                        <%= f.submit "Update", class: "home-search-form--search new-post--submit" %>
                    </div>
                </div>

                <div class="company-edit--section company-edit--metrics company-edit--hidden" id="company-edit-3">
                    <div>THIS IS THE METRICS SECTION</div>
                    <div class="actions">
                        <%= f.submit "Update", class: "home-search-form--search new-post--submit" %>
                    </div>
                </div>
            <% end %>

            <div class="company-edit--section company-edit--delete company-edit--hidden" id="company-edit-4">
                <h3>Cancel my account</h3>

                <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "home-search-form--search new-post--submit", data: { confirm: "Are you sure?" }, method: :delete %></p>

                <%= link_to "Back", :back %>
            </div>
        </div>

        <!-- </div> -->
    <!-- </div> -->
</div>

<%= render "partials/footer" %>