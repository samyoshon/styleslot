<div class="new-post--container col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">  
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">    
        <h1>Employer Log in</h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
                <%= f.email_field :email, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", autofocus: true, placeholder: "Work Email"%>
            </div>

            <div class="field">
                <%= f.password_field :password, class: "col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", autocomplete: "off", placeholder: "Password" %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
            <% end -%>

            <div class="actions">
                <%= f.submit "Log in", class: "home-search-form--search new-post--submit" %>
            </div>
        <% end %>

        <%= render "companies/shared/links" %>
    </div>
</div>