<!DOCTYPE html>
<html>
<head>
    <title>Jobs on Ave | Fashion jobs only</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>

<body>
   <nav class="navbar navbar-inverse nav-bar" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle btn-navbar" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false" aria-controls="navbar" id="navbar-hamburger">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span> 
            </button>
                <%= link_to image_tag("logo.png", border: 0), root_path, id: :"navbar-logo" %>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <% if company_signed_in? %>
                    <li>
                        <%= link_to "Search Jobs", posts_path, :method => :get, class: :"btn-navbar", id: :"btn-words" %>
                    </li>
                    <li>
                        <%= link_to "Post Job", new_post_path, :method => :get, class: :"btn-navbar", id: :"btn-words" %>
                    </li>
                    <li class="dropdown-toggle btn-navbar" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <% if current_company.email == nil || current_company.email == "" %>
                            <a id="btn-words"><%= "Edit Profile" %></a>
                        <% else %>
                            <a id="btn-words"><%= "#{current_company.name}" %>  <i class="fa fa-caret-down"  id="navbar-edit"></i></a>
                        <% end %>
                    </li>
                    <ul class="dropdown-menu navbar-dropdown-menu">
                        <li>
                            <%= link_to "Edit Profile", edit_company_registration_path, class: :"dropdown-navbar" %>
                        </li>
                        <li role="separator" class="divider"></li>
                        <li>
                            <%= link_to "Logout", destroy_company_session_path, :method => :delete, class: :"dropdown-navbar" %>
                        </li>
                    </ul>
                <% elsif user_signed_in? %>
                    <li>
                        <%= link_to "Search Jobs", posts_path, :method => :get, class: :"btn-navbar", id: :"btn-words" %>
                    </li>
                    <li class="dropdown-toggle btn-navbar" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <% if current_user.email == nil || current_user.email == "" %>
                            <a id="btn-words"><%= "Edit Profile" %></a>
                        <% else %>
                            <a id="btn-words"><%= "#{current_user.email}" %>  <i class="fa fa-caret-down"  id="navbar-edit"></i></a>
                        <% end %>
                    </li>
                    <ul class="dropdown-menu navbar-dropdown-menu">
                        <li>
                            <%= link_to "Edit Profile", edit_company_registration_path, class: :"dropdown-navbar" %>
                        </li>
                        <li role="separator" class="divider"></li>
                        <li>
                            <%= link_to "Logout", destroy_company_session_path, :method => :delete, class: :"dropdown-navbar" %>
                        </li>
                    </ul>
                <% else %>
                    <li>
                        <%= link_to "Search Jobs", posts_path, :method => :get, class: :"btn-navbar", id: :"btn-words" %>
                    </li>
                    <li>
                        <%= link_to "Post Job", new_post_path, :method => :get, class: :"btn-navbar", id: :"btn-words" %>
                    </li>
                <% end %> 
            </ul>
        </div>
    </nav>

    <div class="main-body">
        <div class="home-flash">
            <% if notice %>
                <div class="bg-banner bg-success"><%= notice %></div>
            <% end %>
            <% if alert %>
                <div class="bg-banner bg-danger"><%= alert %></div>
            <% end %>
        </div>
        <%= yield %>
    </div>
</body>

</html>
