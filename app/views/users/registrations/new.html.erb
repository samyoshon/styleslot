<div class="sign-up--background col-xs-12 col-sm-12">
  <div class="new-post--container sign-up--page col-xs-12 col-sm-12 col-md-6 col-md-offset-3">
      <div class="col-xs-12 col-sm-12 col-md-6">
          <h1 id="sign-up-header">Find the Best Teachers Here.</h1>
          <p class="post-tagline" id="sign-up-tagline">JETSET TEACH helps you find the best jobs to start travleing and teaching English abroad.</p>
          <p class="post-tagline" id="sign-up-tagline">Sign up to post your resume and get relevant job recommendations.</p>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-6">
        <h1 id="sign-up-header">User Sign up</h1>
        <p class="post-tagline" id="sign-up-tagline">Sign up to post your resume online and get discovered.</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.email_field :email, class: "new-post--input", id: "sign-up-email-field", autofocus: true, placeholder: "Email" %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
            <em id="sign-up-tagline">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: "new-post--input", autocomplete: "off", placeholder: "Password" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, class: "new-post--input", autocomplete: "off", placeholder: "Password Confirmation" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "home-search-form--search new-post--submit" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>
    </div>
  </div>
</div>
