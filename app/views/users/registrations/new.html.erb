 <div class="new-post--container col-md-6 col-md-offset-3">  
  <div class="col-sm-12">
    <h1>User Sign up</h1>
    <p>Sign up to post your resume online and get discovered.</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, class: "new-post--input", id: "sign-up-email-field", autofocus: true, placeholder: "Email" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "new-post--input", autocomplete: "off", placeholder: "Password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, class: "new-post--input", autocomplete: "off", placeholder: "Password Confirmation" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "home-search-form--search new-post--submit" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
