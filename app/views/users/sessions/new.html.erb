<div class="new-post--container col-md-6 col-md-offset-3">  
  <div class="col-sm-12">   
    <h1>Users Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, class: "new-post--input", autofocus: true, placeholder: "Email"%>
      </div>

      <div class="field">
        <%= f.password_field :password, class: "new-post--input", autocomplete: "off", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "home-search-form--search new-post--submit" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>