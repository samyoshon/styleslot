<div class="main-container col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">

	<div class="post-container resume-container col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<% if @resumes.present? %>
			<% @resumes.each do |resume| %>
				<% if resume.name.present? %>
					<%= link_to resume_path(resume) do %>
						<div class="post-container--wrapper col-xs-12 col-sm-12 col-md-4 col-lg-4">
							<div class="post-container--each resume-container--each col-xs-12 col-sm-12 col-md-12 col-lg-12">
								<% if resume.logo.present? %>
									<%= image_tag resume.logo(:small), class: :'circle-image' %>
								<% end %>
								<h1 class="resume-container--title"><%= link_to resume.name, resume_path(resume), target: "_blank", class: :"post-view-count", id: :"#{resume.id}" %> <%= link_to resume.lastname, resume_path(resume), target: "_blank", class: :"post-view-count", id: :"#{resume.id}" %></h1>
								<p><%= resume.name %> <%= resume.lastname %></p>
							</div>
						</div>
					<% end %>
				<% end %>
			<% end %>
		<% else %>
			<p>There are no posts containing the term(s) <%= params[:search] %>.</p>
		<% end %>
	</div>

	<div class="jobs-pagination col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<%= will_paginate @resumes %>
	</div>
</div>
