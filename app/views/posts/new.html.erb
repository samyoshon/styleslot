			<%= f.text_area :description, class: :"new-post--input new-post--textarea", required: true %>

			<!-- <%= f.select :job_type, options_for_select(["Accounting/Finance", "Administrative", "Buyer", "Design", "Digital/eCommerce", "Fit Model", "Human Resources", "IT", "Logistics/Supply Chain", "Marketing", "Merchandising", "Operations", "Pattern Making", "Photography", "Production", "Retail Store", "Sales", "Social Media", "Sourcing", "Stylist", "Other"]), {include_blank: "Job Type"}, class: :"new-post--input index-search-form--select", id: :"select-drop-down", required: true %> -->
			<h6 class="form-labels">Job Qualifications*</h6>
			<%= f.text_area :qualifications, class: :"new-post--input new-post--textarea", required: true %>

			<h6 class="form-labels">Benefits*</h6>
			<%= f.text_area :benefits, class: :"new-post--input new-post--textarea", required: true %>

			<h6 class="form-labels">How To Apply*</h6>
			<%= f.text_area :how_to, class: :"new-post--input new-post--textarea", required: true %>

			<h6 class="form-labels">Application Link</h6>
			<%= f.url_field :how_to_link, class: :"new-post--input", placeholder: "http://www.example.com - (if n/a leave blank)" %>

			<h6 class="form-labels">Salary</h6>
			<%= f.text_field :salary, class: :"new-post--input", placeholder: "15,000 - 17,000 RMB per month - (if n/a leave blank)"%>

			<h6 class="form-labels">Airfare Stipend</h6>
			<%= f.text_field :airfare, class: :"new-post--input", placeholder: "Roundtrip Fare Included - (if n/a leave blank)"%>

			<h6 class="form-labels">Housing Stipend</h6>
			<%= f.text_field :housing, class: :"new-post--input", placeholder: "Rent Free Apartment - (if n/a leave blank)"%>

			<h6 class="form-labels">Bachelors Degree Required?</h6>
			<%= f.check_box :university, class: :"new-post--input" %>

			<h6 class="form-labels">TEFL Required?</h6>
			<%= f.check_box :tefl, class: :"new-post--input"%>

			<h6 class="form-labels">Vacation Days</h6>
			<%= f.text_field :vacation, class: :"new-post--input", placeholder: "20 Working Days Vacation - (if n/a leave blank)"%>

			<h6 class="form-labels">Health Insurance</h6>
			<%= f.text_field :insurance, class: :"new-post--input", placeholder: "Medical - (if n/a leave blank)"%>

			<h6 class="form-labels">Images</h6>
			
			<%= f.file_field :image, class: :"new-post--input", placeholder: "Images"%>

			</br>
			</br>
			</br>
			<p class="post-tagline--payment">Job will be posted for 30 days. Please double check your post as it is final. <b>Single job post is FREE for a limited time!</b> Regular price is $100 for single post.</p>
			<button type="submit" class="home-search-form--search new-post--submit col-sm-12" id="btn-job-post">Post Job</button>
		</div>
			
