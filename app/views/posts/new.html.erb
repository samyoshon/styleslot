<div class="new-post-bg--container bg-container col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<div class="new-post--container col-xs-12 col-sm-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<%= form_for @post do |f| %>
			<h1>New job post</h1>
			<p>Find candidates who are passionate about fashion</p>

			<%= f.text_field :title, class: :"col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", placeholder: "Job Title", autofocus: true%>

			<%= f.text_field :city, class: :"col-xs-12 col-sm-12 col-md-4 col-lg-4 new-post--input", placeholder: "City" %>

			<%= f.text_field :state, class: :"col-xs-12 col-sm-12 col-md-4 col-lg-4 new-post--input", placeholder: "State" %>

			<%= f.text_field :zip, class: :"col-xs-12 col-sm-12 col-md-4 col-lg-4 new-post--input", placeholder: "Zip Code" %>

			<%= f.text_area :description, class: :"col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input new-post--textarea", placeholder: "Job Description" %>

			<%= f.text_area :description, class: :"col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input new-post--textarea", placeholder: "Job Qualifications" %>

			<%= f.text_area :description, class: :"col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input new-post--textarea", placeholder: "Benefits" %>


			<%= f.text_area :city, class: :"col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input new-post--textarea", placeholder: "How To Apply" %>

			<%= f.url_field :city, class: :"col-xs-12 col-sm-12 col-md-12 col-lg-12 new-post--input", placeholder: "If relevant, add application link here (http://www.example.com)" %>

			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<%= f.radio_button :description, "Design" %>
			<%= f.label :description, "Design" %>

			<%= f.radio_button :description, "Digital" %>
			<%= f.label :description, "Digital" %>

			<%= f.radio_button :description, "Logistics" %>
			<%= f.label :description, "Logistics" %>	

			<%= f.radio_button :description, "Marketing" %>
			<%= f.label :description, "Marketing" %>		

			<%= f.radio_button :description, "Merchandising" %>
			<%= f.label :description, "Merchandising" %>

			<%= f.radio_button :description, "Operations" %>
			<%= f.label :description, "Operations" %>		

			<%= f.radio_button :description, "Production" %>
			<%= f.label :description, "Production" %>

			<%= f.radio_button :description, "Sales" %>
			<%= f.label :description, "Sales" %>

			<%= f.radio_button :description, "Social Media" %>
			<%= f.label :description, "Social Media" %>


			</div>

			<%= f.submit "Submit", class: :"col-xs-12 col-sm-12 col-md-3 col-md-offset-9 col-lg-3 col-lg-offset-9 home-search-form--search new-post--submit", placeholder: "State" %>
		<% end %>
		</div>
	</div>
</div>

<%= render "partials/footer" %>